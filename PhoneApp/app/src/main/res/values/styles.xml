<?xml version="1.0" encoding="utf-8"?>
<resources>

     <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
         <item name="colorPrimary">@font/inter_regular</item>
         <item name="colorPrimaryDark">@font/inter_bold</item>
         <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="ButtonStyle" parent="android:Theme">
        <item name="android:button">@style/CButton</item>
    </style>
    <style name="CButton" parent="android:style/Widget.Button">
        <item name="android:textSize">15sp</item>
        <item name="android:background">@null</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ApplicationStyle" parent="android:Theme">
        <item name="android:buttonStyle">@style/CButton</item>
    </style>
</resources>